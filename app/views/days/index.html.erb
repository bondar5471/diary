<h2>All day</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Successful</th>
      <th>Report</th>
    </tr>
  </thead>
  <tbody>
      <% @days.each do |day| %>
        <tr>
          <td><%= day.date.try(:strftime, '%B %d, %Y') %></td>
          <td><%= day.successful %></td>
          <td><%= day.report %></td>
          <td class="btn btn-success"><%= link_to "Show", day %></td>
          <td class="btn btn-warning"><%= link_to "Edit", edit_day_path(day) %></td>
          <td class="btn btn-danger"><%= link_to "Delete", day, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <%end%>
  </tbody>
</table>
<br>
<span class="btn btn-default btn-lg" ><%= link_to "New day", new_day_path %></span>
